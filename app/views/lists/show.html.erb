<div class="top-bar">
  <h1 class='mx-3'><%=@list.name  %></h1>
  <div class='mx-3 '>
    <%= link_to "Home", root_path, class: 'btn btn-primary text-white' %>
    <%= link_to "New bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary text-white' %>
  </div>
</div>
<div class="container">
  <div class="card-container">
        <% @list.bookmarks.each do |bookmark| %>
      <div class="card">
          <%= image_tag bookmark.movie.poster_url, alt: "Movie poster", class:'img' %>
          <div class="top-line">
            <h5><%= bookmark.movie.title  %></h5>
            <h6><%= bookmark.movie.rating.round(1) %> ‚≠ê</h6>
          </div>
          <%= bookmark.movie.overview  %>
          <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: 'are you sure?'} do %>
            <p class="btn btn-danger">Delete bookmark</p>
          <% end %>
      </div>
        <% end %>
    </div>
</div>
