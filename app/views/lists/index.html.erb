<div class="top-bar mb-2">
  <i class="fa-solid fa-film"></i>
  <div class='mx-3 '>
    <%= link_to "New list", new_list_path, class: 'btn btn-primary text-white' %>
  </div>
</div>

<div class="banner">
</div>

<div class="container">
  <div class="list-card-container">
      <% @lists.each do |list| %>
        <%=link_to list_path(list), class:'text-decoration-none text-black' do%>
    <div class="list-card">
          <h3><%= list.name %> </h3>
    </div>
        <% end %>
      <% end %>
  </div>
</div>
